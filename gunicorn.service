[Unit]
Description=gunicorn instance to server api
After=network.target

[Service]
User=kosam
Group=kosam
WorkingDirectory=/home/kosam/apps/fastapi/
Environment="PATH=/home/kosam/apps/fastapi/venv/bin"
EnvironmentFile=/home/kosam/apps/fastapi/.env
ExecStart=/home/kosam/apps/fastapi/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorkers app.main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target